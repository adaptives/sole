# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /courses/list                           CourseC.list
GET     /courses/course/{courseId}              CourseC.course
GET     /courses/course/{courseId}/section/{sectionId}     CourseC.section
GET     /courses/course/section/{sectionId}/question/{questionId} CourseC.question
POST    /courses/course/section{sectionId}/question CourseC.addQuestion
GET     /courses/course/{courseId}/forum        CourseC.forum
GET     /courses/course/{courseId}/question/{questionId}  CourseC.forumQuestion

GET     /bookgroups/list/{page}/{size}           BookGroupC.list
GET     /bookgroups/show/{sanitizedTitle}/{page}/{size}        BookGroupC.show
GET     /bookgroups/show/{sanitizedTitle}        BookGroupC.show
GET     /bookgroups/bookgroup/{sanitizedTitle}/question/{questionId}  BookGroupC.forumQuestion

GET     /studysessions/currentlist                                                                                     StudySessionC.currentlist
GET     /studysessions/studysession/{sanitizedTitle}                                                                   StudySessionC.studySession
GET     /studysessions/studysession/{sanitizedTitle}/sessionpart/{sessionPartSanitizedTitle}                           StudySessionC.sessionPart
GET     /studysessions/studysession/{sanitizedTitle}/participants                                                      StudySessionC.participants
GET     /studysessions/studysession/{sanitizedTitle}/resources                                                         StudySessionC.resources
GET     /studysessions/studysession/{sanitizedTitle}/sessionpart/{sessionPartSanitizedTitle}/activity/responses        StudySessionC.sessionPartActivityResponses
GET     /studysessions/studysession/{sanitizedTitle}/forum                                                             StudySessionC.forum
GET     /studysessions/studysession/{sanitizedTitle}/forum/question/{questionId}/{sanitizedQuestionTitle}              StudySessionC.forumQuestion
GET     /studysessions/studysession/{sanitizedTitle}/manageParticipants                                                StudySessionSecureC.manageParticipants
POST    /studysessions/studysession/{studySessionId}/forum{forumId}/question/add                                       StudySessionSecureC.postQuestion
POST    /studysessions/studysession/{studySessionId}/forum{forumId}/question/{questionId} 	                           StudySessionSecureC.postAnswer
POST    /activityresponse/{activityId}                                                                                 StudySessionSecureC.postActivityResponse

GET     /page/{name}                           PageC.show

GET     /users/{page}/{size}                   UserProfileC.List
GET     /users                                 UserProfileC.list
GET     /users/{userId}                        UserProfileC.show

GET     /blog/list                             BlogPostC.list
GET     /blog                                  BlogPostC.index
GET     /blog/post/{year}/{month}/{day}/{sanitizedTitle}                        BlogPostC.show
POST    /blog/{postId}/comment/add             BlogPostC.postComment

GET     /questionc/like/questionId/{questionId}    QuestionC.like
GET     /questionc/like/answerId/{answerId}        QuestionC.likeAnswer

GET     /callbacks/auth/twitter                    SocialAuthC.twitterCallback

GET     /blog/obfuscate/feed                       FeedC.blog
GET     /studySessions/studySession/{studySessionId}/feed  FeedC.studySession
GET     /studySessions/feed                        FeedC.studySessions

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import CRUD routes
*      /admin              module:crud

# Import secure routes
*       /                                       module:secure

# Catch all
*       /{controller}/{action}                  {controller}.{action}
